<div class="container" id="App">
    <div class="row">
        <div class="col-md-8">
            <div id="calendar">
                <nav class="pull-left">
                    <ul class="pager">
                        <li><a href="#" class="js-prev-month">&laquo;</a></li>
                        <li><a href="#" class="js-next-month">&raquo;</a></li>
                        <li><a href="#" class="js-today">Сегодня</a></li>
                    </ul>
                </nav>
                <div class="b-calendar__current-date js-calendar__current-date"></div>
                <table class="table table-bordered b-calendar-table">
                    <thead>
                    <tr>
                        <th>Пн</th>
                        <th>Вт</th>
                        <th>Ср</th>
                        <th>Чт</th>
                        <th>Пт</th>
                        <th>Сб</th>
                        <th>Вс</th>
                    </tr>
                    </thead>
                    <tbody class="js-calendar-table-body"></tbody>
                </table>
                <nav class="pull-left">
                    <ul class="pager">
                        <li><a href="#" class="js-prev-month">&laquo;</a></li>
                        <li><a href="#" class="js-next-month">&raquo;</a></li>
                        <li><a href="#" class="js-today">Сегодня</a></li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="col-md-4" id="addNotesForm">
            <h2>Добавить заметку</h2>
            <form novalidate="novalidate">
                <div class="form-group">
                    <label for="noteForm_title">Заголовок</label>
                    <input type="text" class="form-control" name="title" id="noteForm_title" required="required">
                </div>
                <div class="form-group">
                    <label for="noteForm_text">Текст</label>
                    <textarea class="form-control" id="noteForm_text" name="text" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="noteForm_date">Дата</label>
                    <input type="text" class="form-control" id="noteForm_date" name="date" required="required" data-provide="datepicker">
                </div>
                <button type="submit" class="btn btn-default">Добавить</button>
            </form>
        </div>
    </div>
</div>